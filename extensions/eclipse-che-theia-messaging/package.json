{
  "name": "@eclipse-che/theia-messaging",
  "keywords": [
    "theia-extension"
  ],
  "version": "0.0.1",
  "description": "Eclipse Che - Theia Messaging",
  "dependencies": {
    "inversify": "^5.0.1",
    "ws": "^7.1.2",
    "@theia/core": "next",
    "@eclipse-che/theia-plugin-ext": "^0.0.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "theiaExtensions": [
    {
      "backend": "lib/node/messaging/che-messaging-backend-module"
    }
  ],
  "license": "EPL-2.0",
  "files": [
    "lib",
    "src",
    "scripts",
    "conf"
  ],
  "scripts": {
    "prepare": "yarn clean && yarn build",
    "clean": "rimraf lib",
    "format": "prettier --check '**/*.ts' package.json",
    "format:fix": "prettier --write '**/*.ts' package.json",
    "lint": "eslint --cache=true --no-error-on-unmatched-pattern=true \"{src,test}/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix --cache=true --no-error-on-unmatched-pattern=true \"{src,test}/**/*.{ts,tsx}\"",
    "compile": "tsc",
    "build": "concurrently -n \"format,lint,compile\" -c \"red,green,blue\" \"yarn format\" \"yarn lint\" \"yarn compile\"",
    "watch": "tsc -w"
  }
}
