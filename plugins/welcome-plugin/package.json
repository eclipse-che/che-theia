{
  "name": "@eclipse-che/welcome-plugin",
  "version": "0.0.1",
  "publisher": "Eclipse Che",
  "keywords": [
    "theia-plugin"
  ],
  "description": "Welcome Page Plugin",
  "license": "EPL-2.0",
  "files": [
    "src",
    "resources"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Welcome plugin configuration",
      "properties": {
        "che.welcome.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable welcome plugin."
        }
      }
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.6.3"
  },
  "devDependencies": {
    "@theia/plugin": "next",
    "@theia/plugin-packager": "latest",
    "@eclipse-che/plugin": "0.0.1"
  },
  "scripts": {
    "prepare": "yarn clean && yarn build && yarn test",
    "clean": "rimraf lib",
    "format": "if-env SKIP_FORMAT=true && echo 'skip format check' || prettier --check '{src,tests}/**/*.ts' package.json",
    "format:fix": "prettier --write '{src,tests}/**/*.ts' package.json",
    "lint": "if-env SKIP_LINT=true && echo 'skip lint check' || eslint --cache=true --no-error-on-unmatched-pattern=true '{src,tests}/**/*.ts'",
    "lint:fix": "eslint --fix --cache=true --no-error-on-unmatched-pattern=true \"{src,tests}/**/*.{ts,tsx}\"",
    "compile": "tsc",
    "build": "concurrently -n \"format,lint,compile\" -c \"red,green,blue\" \"yarn format\" \"yarn lint\" \"yarn compile\" && theia-plugin pack",
    "watch": "tsc -w",
    "test": "if-env SKIP_TEST=true && echo 'skip test' || jest --forceExit"
  },
  "engines": {
    "theiaPlugin": "next"
  },
  "theiaPlugin": {
    "backend": "lib/welcome-plugin.js"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageDirectory": "coverage",
    "modulePathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "preset": "ts-jest"
  }
}
