{
  "name": "@eclipse-che/ports-plugin",
  "publisher": "Eclipse Che",
  "keywords": [
    "theia-plugin"
  ],
  "description": "Manage Eclipse Che Ports Plugin",
  "license": "EPL-2.0",
  "files": [
    "src",
    "resources"
  ],
  "dependencies": {
    
  },
  "devDependencies": {
    "@types/jest": "23.3.13",
    "@theia/plugin": "0.3.19",
    "@theia/plugin-packager": "latest",
    "@eclipse-che/plugin": "latest",
    "jest": "23.6.0",
    "ts-jest": "23.10.5",
    "rimraf": "2.6.2",
    "tslint": "5.10.0",
    "typescript-formatter": "7.2.2",
    "typescript": "2.9.2"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "format-code": "tsfmt -r",
    "compile": "tsc",
    "test": "jest",
    "test-debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --coverage false --watchAll",
    "test-watch": "jest --watchAll",
    "watch": "tsc -watch",
    "tslint-fix": "tslint --fix --project .",
    "tslint": "tslint --project .",
    "build": "yarn run format-code && yarn run tslint-fix && yarn run tslint && yarn run compile && yarn run test && theia:plugin pack"
  },
  "engines": {
    "theiaPlugin": "next"
  },
  "theiaPlugin": {
    "backend": "lib/ports-plugin.js"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
